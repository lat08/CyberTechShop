<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @{
            var controller = ViewContext.RouteData.Values["controller"].ToString();
            switch (controller)
            {
                case "Dashboard":
                    <text>CyberTech - Trang chủ</text>
                    break;
                case "ProductManage":
                    <text>CyberTech - Quản lý sản phẩm</text>
                    break;
                case "CategoryManage":
                    <text>CyberTech - Quản lý danh mục</text>
                    break;
                case "CustomerManage":
                    <text>CyberTech - Quản lý khách hàng</text>
                    break;
                case "QRCodeManage":
                    <text>CyberTech - Quản lý mã QR</text>
                    break;
                case "OrderManage":
                    <text>CyberTech - Quản lý đơn hàng</text>
                    break;
                case "ReservationManage":
                    <text>CyberTech - Quản lý đơn đặt hàng</text>
                    break;
                case "UserManage":
                    <text>CyberTech - Cài đặt hệ thống</text>
                    break;
                case "RankManage":
                    <text>CyberTech - Quản lý cấp bậc</text>
                    break;
                default:
                    <text>@ViewData["Title"]</text>
                    break;
            }
        }
    </title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- General styles -->
    <link rel="stylesheet" href="~/admin/css/styles.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Mobile Overlay -->
    <div class="mobile-overlay"></div>
    
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo-container">
                <img src="~/admin/dashboard.png" class="logo-img">
                <div class="logo-text">
                    <h3>Quản Lý Hệ Thống</h3>
                </div>
            </div>
        </div>
        
        <!-- Sidebar content with scrolling -->
        <div class="sidebar-content">
            <ul class="sidebar-menu">
                <li><a href="/Dashboard" class="@(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")"><i class="fas fa-th-large"></i> <span class="menu-text">Trang Chủ</span></a></li>
                <li><a href="/ProductManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "ProductManage" ? "active" : "")"><i class="fas fa-box"></i> <span class="menu-text">Sản Phẩm</span></a></li>
                <li><a href="/CategoryManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "CategoryManage" ? "active" : "")"><i class="fas fa-layer-group"></i> <span class="menu-text">Danh Mục</span></a></li>
                <li><a href="/CustomerManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "CustomerManage" ? "active" : "")"><i class="fas fa-users"></i> <span class="menu-text">Khách Hàng</span></a></li>
                <li><a href="/OrderManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "OrderManage" ? "active" : "")"><i class="fas fa-clipboard-list"></i> <span class="menu-text">Đơn Hàng</span></a></li>
                <li><a href="/QRCodeManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "QRCodeManage" ? "active" : "")"><i class="fas fa-qrcode"></i> <span class="menu-text">Mã QR</span></a></li>
                <li><a href="/RankManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "RankManage" ? "active" : "")"><i class="fas fa-trophy"></i> <span class="menu-text">Cấp Bậc</span></a></li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "RankManage")">
                        <i class="fas fa-star nav-icon"></i>
                        <span>Quản lý Hạng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "VoucherManage")">
                        <i class="fas fa-ticket-alt nav-icon"></i>
                        <span>Quản lý Voucher</span>
                    </a>
                </li>
                <li><a href="/UserManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "UserManage" ? "active" : "")"><i class="fas fa-user-cog"></i> <span class="menu-text">Cài Đặt Hệ Thống</span></a></li>
            </ul>
            
        </div>
        
        <!-- User profile at bottom -->
        <div class="user-profile">
            <div class="user-avatar" title="Nhấn để chỉnh sửa thông tin cá nhân">@(Context.Session.GetString("StaffFullName")?.Substring(0, 1) ?? "U")</div>
            <div class="user-info" title="Nhấn để chỉnh sửa thông tin cá nhân">
                <p class="user-name">@(Context.Session.GetString("StaffFullName") ?? "Người dùng")</p>
                <p class="user-role">@(Context.Session.GetString("RoleName") ?? "Nhân viên")</p>
            </div>
            <a href="/admin/Logout" class="user-logout"><i class="fas fa-sign-out-alt" title="Nhấn để đăng xuất"></i></a>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="top-navbar">
            <div class="toggle-sidebar d-flex align-items-center">
                <i class="fas fa-bars"></i>
            </div>
        </div>
        
        @RenderBody()
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="~/admin/js/script.js"></script>
    <script src="~/admin/js/utils.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
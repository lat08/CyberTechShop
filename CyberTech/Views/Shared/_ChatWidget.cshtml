@{
    var token = ViewBag.AntiforgeryToken;
}
@Html.AntiForgeryToken()

<div id="chat-bubble" class="chat-bubble">
    <i class="fas fa-comment"></i>
</div>

<div id="chat-widget" class="chat-widget">
    <div class="chat-header" id="chat-header">
        <div class="chat-header-left">
            <div class="chat-info">
                <span class="chat-title">CyberTech Assistant</span>
                <span class="chat-status">Trực tuyến</span>
            </div>
        </div>
        <div class="chat-controls">
            <button class="control-btn" id="chat-minimize" title="Thu nhỏ">
                <i class="fas fa-minus"></i>
            </button>
            <button class="control-btn" id="chat-maximize" title="Phóng to">
                <i class="fas fa-expand"></i>
            </button>
            <button class="control-btn" id="chat-close" title="Đóng">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <div class="chat-body">
        <div id="chat-messages" class="chat-messages">
            <div class="message bot-message welcome-message">
                <div class="message-content">
                    <p>Xin chào! Tôi là trợ lý của CyberTech. Tôi có thể giúp gì cho bạn?</p>
                </div>
            </div>
        </div>
        
        <button id="scroll-bottom-btn" class="scroll-bottom-btn" title="Cuộn xuống tin nhắn mới nhất">
            <i class="fas fa-chevron-down"></i>
        </button>
        
        <div id="typing-indicator" class="typing-indicator">
            <div class="typing-bubble">
                <div class="dots">
                    <span></span><span></span><span></span>
                </div>
                <span class="typing-text">Đang trả lời...</span>
            </div>
        </div>
    </div>

    <div class="chat-composer">
        <div class="input-wrapper">
            <textarea id="chat-input" 
                     placeholder="Nhập tin nhắn..." 
                     rows="1"
                     data-min-rows="1"
                     data-max-rows="3"></textarea>
            <button class="send-btn" id="send-message" title="Gửi tin nhắn">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>
</div>


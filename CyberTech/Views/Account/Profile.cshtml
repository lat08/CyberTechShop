@model CyberTech.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "_AccountLayout";
}

<div class="profile-section">
    <div class="profile-header">
        <div class="profile-avatar">
            <img src="@(string.IsNullOrEmpty(Model.ProfileImageURL) ? "/images/default-avatar.png" : Model.ProfileImageURL)" alt="Avatar">
        </div>
        <div class="profile-info">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Email</p>
            <div class="profile-stats">
                <div class="stat-item">
                    <div class="stat-value">@Model.OrderCount</div>
                    <div class="stat-label">Đơn hàng</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">@Model.TotalSpent?.ToString("N0")đ</div>
                    <div class="stat-label">Tổng chi tiêu</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">@Model.Rank?.DiscountPercent%</div>
                    <div class="stat-label">Giảm giá</div>
                </div>
            </div>
        </div>
    </div>

    <div class="rank-progress">
        <div class="rank-info">
            <div class="rank-name">@Model.Rank?.RankName</div>
            <div class="rank-discount">Giảm giá @Model.Rank?.DiscountPercent%</div>
        </div>
        <div class="progress">
            @{
                var nextRank = ViewBag.NextRank as CyberTech.Models.Rank;
                var progress = 0;
                if (nextRank != null)
                {
                    progress = (int)((Model.TotalSpent ?? 0) / nextRank.MinTotalSpent * 100);
                }
            }
            <div class="progress-bar" style="width: @progress%"></div>
        </div>
        <div class="rank-stats">
            <span>Đã chi: @Model.TotalSpent?.ToString("N0")đ</span>
            @if (nextRank != null)
            {
                <span>Còn @((nextRank.MinTotalSpent - (Model.TotalSpent ?? 0)).ToString("N0"))đ để lên @nextRank.RankName</span>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Thông tin cá nhân</h5>
        </div>
        <div class="card-body">
            <form id="profileForm" method="post" action="@Url.Action("UpdateProfile", "Account")">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ và tên</label>
                            <input type="text" class="form-control" name="Name" value="@Model.Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="tel" class="form-control" name="Phone" value="@Model.Phone">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" value="@Model.Email" readonly>
                </div>
                <div class="form-group">
                    <label>Ngày tham gia</label>
                    <input type="text" class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy")" readonly>
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#profileForm').on('submit', function(e) {
                e.preventDefault();
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(response) {
                        if (response.success) {
                            toastr.success('Cập nhật thông tin thành công');
                        } else {
                            toastr.error(response.message || 'Có lỗi xảy ra');
                        }
                    },
                    error: function() {
                        toastr.error('Có lỗi xảy ra');
                    }
                });
            });
        });
    </script>
} 
@{
    ViewData["Title"] = "Thanh toán thất bại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="mb-4">Thanh toán thất bại</h2>
                    <p class="text-muted mb-4">
                        Rất tiếc, quá trình thanh toán của bạn không thành công.
                        @if (ViewBag.OrderId != null)
                        {
                            <br />
                            <span>Mã đơn hàng: <strong>#@ViewBag.OrderId</strong></span>
                        }
                        <br />
                        Vui lòng thử lại hoặc liên hệ với chúng tôi để được hỗ trợ.
                    </p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Index", "Cart")" class="btn btn-primary btn-lg px-4 me-md-2">
                            <i class="fas fa-shopping-cart me-2"></i>Quay lại giỏ hàng
                        </a>
                        <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-primary btn-lg px-4">
                            <i class="fas fa-headset me-2"></i>Liên hệ hỗ trợ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 15px;
        }
        
        .btn {
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .text-danger {
            color: #dc3545 !important;
        }
    </style>
} 